        <TextBox x:Name="txbResult" HorizontalAlignment="Left" Margin="100,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="552" Height="258" Background="#FFEDEDED"/>
        <Button x:Name="btnShowAll" Content="Show all" HorizontalAlignment="Left" Margin="582,88,0,0" VerticalAlignment="Top" Height="27" Width="105" Background="#FFBDD222" FontWeight="Bold" FontSize="14" Click="btnShowAll_Click"/>

    </Grid>
</Window>
